$(document).ready(function(){$('.extra_text, .adva-option').click(function(){$(this).find($('.fa-angle-down')).toggleClass('fa-angle-up');});$(".click_trustpilot").click(function(e){e.preventDefault();var position=$($(this).attr("href")).offset().top;$("body, html").animate({scrollTop:position});});$('.airline-slider').slick({infinite:true,arrows:false,dots:true,autoplay:true,slidesToShow:1,slidesToScroll:1});$('.promo-slider').slick({infinite:true,arrows:false,dots:true,autoplay:true,fade:true,speed:3000,slidesToShow:1,slidesToScroll:1});$('.slider-for-deal').slick({centerMode:true,centerPadding:'0px',slidesToShow:1,responsive:[{breakpoint:10000,settings:"unslick"},{breakpoint:1100,settings:{arrows:false,centerMode:true,centerPadding:'40px',slidesToShow:1}},{breakpoint:767,settings:"unslick"}]});$('.slider-for-trustpilot').slick({centerMode:true,centerPadding:'0px',slidesToShow:4,responsive:[{breakpoint:1100,settings:{arrows:false,centerMode:true,centerPadding:'40px',slidesToShow:3}},{breakpoint:990,settings:{arrows:false,centerMode:true,centerPadding:'40px',slidesToShow:2}},{breakpoint:767,settings:{arrows:false,centerMode:true,centerPadding:'40px',slidesToShow:1}}]});$('.home_banner').slick({infinite:true,arrows:false,dots:false,autoplay:true,fade:true,speed:3000,slidesToShow:1,slidesToScroll:1});$(".show-more a").on("click",function(){var $this=$(this);var $content=$this.parent().prev("div.content");var linkText=$this.text().toUpperCase();if(linkText==="READ MORE"){linkText="Read Less";$content.switchClass("hideContent","showContent",400);}else{linkText="Read more";$content.switchClass("showContent","hideContent",400);};$this.text(linkText);});$(window).on("load",function(){if($(window).width()<768){$('.deal-tab-mobile').addClass('tabs');$(".deal-tab-mobile.tabs").tabs();}
else{}});});